<%= render "layouts/errors", :object => @review %>

<%= form_for [@product,@review] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit :Submit, :class => 'btn btn-success' %>
<% end %>
