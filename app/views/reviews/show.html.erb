<div class="row">
  <div class="card col-md-6">
    <div class="card-header">

    </div>
    <div class="card-body">
      <% content_for(:content, @review.content) %>
      <% content_for(:author, @review.author) %>
      <% content_for(:rating, @review.rating) %>
      <h2>Review for <%= @review.product.name %></h2>
      <hr>
      <p><%= @review.content %></p>
      <h3>by <%= @review.author %></h3>
      <h2>Rating: <%= @review.rating %></h2>
    </div>
  </div>
  <div class="col-md-6">

    <h3><a href="/">Home</a></h3>
  </div>
</div>
