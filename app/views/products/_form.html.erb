<%= render "layouts/errors", :object => @product %>

<div class="card">
  <div class="card-body">
    <%= form_for @product do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :cost %>
      <%= f.text_field :cost %>
      <%= f.label :country %>
      <%= f.text_field :country %>
      <%= f.submit :Submit, :class => 'btn btn-success' %>
    <% end %>
  </div>
</div>
