<% content_for(:name, @product.name) %>
<h1><%= @product.name %></h1>

<% if @product.reviews.any? %>
  <% @product.reviews.each do |review| %>
    <p>
      <%= link_to review.author, product_review_path(review)%>,
    </p>
  <% end %>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>

<%= link_to "New Review", new_product_review_path(@product) %>

<%= render "form" %>

